@{
    Layout = null;

}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sign Up</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/Signup/Index.css" rel="stylesheet">
   
</head>
<body>
    <div class="signup-card">
        <h2 class="text-center mb-4">Sign Up</h2>
        <form method="post">
            <div class="form-floating mb-3">
                <input type="text" 
                       class="form-control" 
                       value="@Model.Name" 
                       id="Name" 
                       name="Name" 
                       placeholder="Full Name" 
                       required>
                <label for="Name">Full Name</label>
                <span class="text-danger alert-danger">@Html.ValidationMessage("Name")</span>
            </div>
           

            <div class="form-floating mb-3">
                <input type="email" 
                       class="form-control" 
                       value="@Model.Email" 
                       id="Email" 
                       name="Email" 
                       placeholder="Email Address" 
                       required>
                <label for="Email">Email Address</label>
                <span class="text-danger alert-danger">@Html.ValidationMessage("Email")</span>
            </div>
           


            <div class="form-floating mb-3">
                <input type="number" 
                       class="form-control" 
                       value="@Model.Phone" 
                       id="Phone" 
                       name="Phone" 
                       placeholder="Phone Number" 
                       required>
                <label for="Phone">Phone Number</label>
                <span class="text-danger alert-danger">@Html.ValidationMessage("Phone")</span>
            </div>
            

            <div class="form-floating mb-3">
                <input type="password" 
                       class="form-control" 
                       value="@Model.Password" 
                       id="Password" 
                       name="Password" 
                       placeholder="Password" 
                       required>
                <label for="Password">Password</label>
                <span class="text-danger alert-danger">@Html.ValidationMessage("Password")</span>
            </div>
            

            <div class="form-floating mb-4">
                <input type="password" 
                       class="form-control" 
                       value="@Model.ConfirmPassword" 
                       id="ConfirmPassword" 
                       name="ConfirmPassword" 
                       placeholder="Confirm Password" 
                       required>

                <label for="ConfirmPassword">Confirm Password</label>
                <span class="text-danger alert-danger">@Html.ValidationMessage("ConfirmPassword")</span>
            </div>
            

            <input value="Sign Up" type="submit" class="btn btn-gradient w-100" />
            <p class="text-muted text-center">Already have an account? <a href="/Login/Index">Sign In</a></p>



        </form>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
