@{
    ViewBag.Title = "CancelledOrders";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="container mt-4 mb-5">
    <!-- Gradient Heading -->
    <div class="p-4 mb-4 text-center text-white rounded shadow"
         style="background: linear-gradient(90deg, #ff4e50, #ff0000);">
        <h2 class="fw-bold m-0">
            <i class="bi bi-x-circle-fill"></i> Cancelled Orders
        </h2>
    </div>

    <!-- Orders Table -->
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table table-hover align-middle text-center">
                    <thead style="background: linear-gradient(90deg, #ff6666, #ff0000); color: #fff;">
                        <tr>
                            <th>Order ID</th>
                            <th>Date</th>
                            <th>Total Products</th>
                            <th>Grand Total</th>
                            <th>Status</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td class="fw-semibold">#@order.Id</td>
                                <td>@order.Date.ToString("dd-MMM-yyyy")</td>
                                <td>
                                    <span class="badge bg-secondary fs-6">
                                        @order.NumberofProduct
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-dark fs-6">Tk @order.GTotal</span>
                                </td>
                                <td>
                                    <span class="badge bg-danger text-white">
                                        @order.Status.Name
                                    </span>
                                </td>
                                <td>
                                    <a href="/Order/ViewOrderDetails/@order.Id"
                                       class="btn btn-sm btn-outline-danger shadow-sm">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
