@{
    ViewBag.Title = "AllProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center bg-warning text-dark p-3 rounded">Manage Products</h2>

@if (TempData["Msg"] != null)
{
    <div class="alert @TempData["Class"] alert-dismissible fade show mt-3" role="alert">
        @TempData["Msg"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@foreach (var productGroupByCategory in Model)
{
    <div class="card my-4 shadow-sm">
        <div class="card-header text-white text-center"
             style="background: linear-gradient(90deg, #0066cc, #3399ff);
            font-weight: bold;
            font-size: 1.2rem;">
            @productGroupByCategory.CategoryName
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0 text-center align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Available Qty</th>
                            <th>Price</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int idx = 0;
                        }
                        @foreach (var product in productGroupByCategory.Products)
                        {
                            <tr>
                                <td>@(++idx)</td>
                                <td>@product.Id</td>
                                <td>@product.Name</td>
                                <td>@product.Qty</td>
                                <td>@product.Price</td>
                                <td>
                                    <a class="btn btn-sm btn-outline-primary" href="/Product/Update/@product.Id">
                                        <i class="bi bi-pencil-square"></i> Update
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
