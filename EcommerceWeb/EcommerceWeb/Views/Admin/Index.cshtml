@{
    ViewBag.Title = "Placed Orders";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4 mb-5">

    <!-- Header -->
    <div class="p-4 mb-4 text-center text-white rounded shadow"
         style="background: linear-gradient(90deg, #1e3c72, #2a5298);">
        <h2 class="fw-bold m-0">
            <i class="bi bi-list-check"></i> Placed Order Details
        </h2>
    </div>

    @if (TempData["Msg"] != null)
    {
        <div class="alert alert-success text-center fw-semibold shadow-sm">
            @TempData["Msg"]
        </div>
    }

    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table table-hover align-middle text-center">
                    <thead class="table-dark text-white">
                        <tr>
                            <th>#</th>
                            <th>Order ID</th>
                            <th>Order Date</th>
                            <th>Customer</th>
                            <th>Total Products</th>
                            <th>Grand Total</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int idx = 0; }

                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@(++idx)</td>
                                <td class="fw-semibold">#@order.Id</td>
                                <td>@order.Date.ToString("dd-MMM-yyyy")</td>
                                <td>@order.Customer.Name</td>
                                <td>
                                    <span class="badge bg-info text-dark fs-6">
                                        @order.NumberofProduct
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-success fs-6">Tk @order.GTotal</span>
                                </td>
                                <td>
                                    <span class="badge
                                        @(order.Status.Name.ToLower() == "placed" ? "bg-warning text-dark" :
                                          order.Status.Name.ToLower() == "confirmed" ? "bg-primary text-white" :
                                          order.Status.Name.ToLower() == "cancelled" ? "bg-danger text-white" :
                                          "bg-secondary text-white") fs-6">
                                        @order.Status.Name
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex flex-wrap gap-2 justify-content-center">
                                        <a href="/Order/ViewOrderDetails/@order.Id" class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-eye"></i> Details
                                        </a>
                                        <a href="/Order/ConfirmOrder/@order.Id" class="btn btn-sm btn-outline-success">
                                            <i class="bi bi-check-circle"></i> Confirm
                                        </a>
                                        <a href="/Order/CancelOrder/@order.Id" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-x-circle"></i> Cancel
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
    