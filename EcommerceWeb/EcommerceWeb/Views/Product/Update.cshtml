
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    form {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        border-radius: 0.75rem;
        box-shadow: 0 6px 15px rgba(37, 117, 252, 0.5);
        padding: 2rem 2.5rem;
        max-width: 400px;
        width: 100%;
        transition: box-shadow 0.3s ease, transform 0.3s ease;
        color: #fff;
    }

        form:hover {
            box-shadow: 0 12px 30px rgba(37, 117, 252, 0.8);
            transform: translateY(-8px);
        }

    #btn {
        background: linear-gradient(45deg, #ff416c, #ff4b2b);
        border: none;
        color: white;
        font-weight: 600;
        padding: 0.6rem 1.5rem;
        border-radius: 0.375rem;
        box-shadow: 0 4px 8px rgba(255, 75, 43, 0.3);
        transition: background 0.4s ease, transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
    }

        #btn:hover {
            background: linear-gradient(45deg, #ff4b2b, #ff416c);
            box-shadow: 0 8px 20px rgba(255, 75, 43, 0.6);
            transform: scale(1.05);
        }
</style>

<div class="d-flex justify-content-center  p-5">
    <form method="post">
        <h2 class="text-center mb-4">Update Product</h2>

        <div class="mb-3">
            <label for="CategoryId" class="form-label fw-bold">Category</label>
            <select class="form-select" id="CategoryId" name="CategoryId" required>
                <option disabled  value="">-- Select a Category --</option>
                <option selected value="@Model.CategoryId">@Model.Category.Name</option>
            </select>
            <span class="text-danger">@Html.ValidationMessage("CategoryId")</span>
        </div>

        <div class="mb-3">
            <label for="Name" class="form-label">Product Name</label>
            <input value="@Model.Name" type="text" class="form-control" id="Name" name="Name" placeholder="Enter product name" />
            <span class="text-danger alert-danger">@Html.ValidationMessage("Name")</span>
        </div>

        <div class="mb-3">
            <label for="Qty" class="form-label">Quantity</label>
            <input value="@Model.Qty" type="number" class="form-control" id="Qty" name="Qty" placeholder="Enter quantity" min="0" />
            <span class="text-danger alert-danger">@Html.ValidationMessage("Qty")</span>
        </div>

        <div class="mb-3">
            <label for="Price" class="form-label">Price</label>
            <input value="@Model.Price" type="text" step="0.01" class="form-control" id="Price" name="Price" placeholder="Enter price" min="0" />
            <span class="text-danger alert-danger">@Html.ValidationMessage("Price")</span>
        </div>

        <input id="btn" type="submit" value="Update" class="btn btn-danger w-100">
    </form>
</div>

