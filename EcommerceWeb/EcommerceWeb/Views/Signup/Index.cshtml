@{
    Layout = null;
    
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sign Up</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            min-height: 100vh;
            background: linear-gradient(135deg, #4e73df, #1cc88a);
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .signup-card {
            background: #ffffff;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
            max-width: 400px;
            width: 100%;
        }

            .signup-card h2 {
                font-weight: bold;
                color: #4e73df;
            }

        .form-floating > label {
            color: #6c757d;
        }

        .form-control:focus {
            border-color: #1cc88a;
            box-shadow: 0 0 0 0.2rem rgba(28,200,138,0.25);
        }

        .btn-gradient {
            background: linear-gradient(135deg, #4e73df, #1cc88a);
            color: white;
            font-weight: bold;
            border: none;
        }

            .btn-gradient:hover {
                opacity: 0.9;
            }
    </style>
</head>
<body>
    <div class="signup-card">
        <h2 class="text-center mb-4">Sign Up</h2>
        <form method="post">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="Name" name="Name" placeholder="Full Name" required>
                <label for="Name">Full Name</label>
                <span class="text-danger alert-danger">@Html.ValidationMessage("Name")</span>
            </div>
           

            <div class="form-floating mb-3">
                <input type="email" class="form-control" id="Email" name="Email" placeholder="Email Address" required>
                <label for="Email">Email Address</label>
                <span class="text-danger alert-danger">@Html.ValidationMessage("Email")</span>
            </div>
           


            <div class="form-floating mb-3">
                <input type="number" class="form-control" id="Phone" name="Phone" placeholder="Phone Number" required>
                <label for="Phone">Phone Number</label>
                <span class="text-danger alert-danger">@Html.ValidationMessage("Phone")</span>
            </div>
            

            <div class="form-floating mb-3">
                <input type="password" class="form-control" id="Password" name="Password" placeholder="Password" required>
                <label for="Password">Password</label>
                <span class="text-danger alert-danger">@Html.ValidationMessage("Password")</span>
            </div>
            

            <div class="form-floating mb-4">
                <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" placeholder="Confirm Password" required>
                <label for="ConfirmPassword">Confirm Password</label>
                <span class="text-danger alert-danger">@Html.ValidationMessage("ConfirmPassword")</span>
            </div>
            

            <input value="Sign Up" type="submit" class="btn btn-gradient w-100" />
            <p class="text-muted text-center">Already have an account? <a href="/Login/Index">Sign In</a></p>



        </form>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
