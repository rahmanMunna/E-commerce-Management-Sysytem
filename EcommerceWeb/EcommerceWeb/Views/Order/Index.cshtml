@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<link rel="stylesheet" href="~/Content/Order/Index.css">


@if (TempData["Msg"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Msg"]
    </div>
}

<div class="container">
    <form method="post">
        <div class="container d-flex justify-content-center mb-5">
            <input class="form form-control" type="text" name="ProductName" placeholder="Search products..." />
            <input class="btn btn-dark" type="submit" value="Search" />
        </div>
    </form>
    @if (Model.Count != 0)
    {
        foreach (var productGroupByCategory in Model)
        {
            <!-- Category Header -->
            <div class="category-header">
                @productGroupByCategory.CategoryName
            </div>

            <div class="row g-4">
                @foreach (var product in productGroupByCategory.Products)
                {
                    <div class="col-sm-6 col-md-4 col-lg-3">
                        <div class="card product-card h-100">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text"><strong>Qty:</strong> @product.Qty</p>
                                <p class="product-price">Tk @product.Price.ToString("F2")</p>
                                <a href="/Order/AddtoCart/@product.Id" class="btn btn-gradient mt-auto">
                                    Add to Cart
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    }
    else
    {
        <div class="card text-center shadow-sm rounded-4 my-4 p-4">
            <i class="bi bi-info-circle fs-1 text-warning mb-3"></i>
            <h3 class="fw-bold text-secondary mb-2">No Prodcut Available</h3>
           
        </div>
    }
</div>
