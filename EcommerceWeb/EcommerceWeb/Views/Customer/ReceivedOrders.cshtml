@{
    ViewBag.Title = "DeliveredOrders";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="container mt-4 mb-5">

   
    <div class="p-4 mb-4 text-center text-white rounded shadow"
         style="background: linear-gradient(90deg, #4facfe, #00f2fe);">
        <h2 class="fw-bold m-0">
            <i class="bi bi-truck"></i> Received Orders
        </h2>
    </div>

    @if (Model.Count == 0)
    {
        <h4 class="text-center alert alert-info">No orders have been delivered.</h4>
    }
    else
    {
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-body p-4">
                <div class="table-responsive">
                    <table class="table table-hover align-middle text-center">
                        <thead class="table-primary text-dark">
                            <tr>
                                <th>#</th>
                                <th>Order ID</th>
                                <th>Order Date</th>
                                <th>Delivered Date</th>
                                <th>Deliveryman</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int idx = 0; }

                            @foreach (var orderTrackerDb in Model)
                            {
                                <tr>
                                    <td>@(++idx)</td>
                                    <td class="fw-semibold">#@orderTrackerDb.OrderId</td>
                                    <td>@orderTrackerDb.Order.Date.ToString("dd MMM yyyy")</td>
                                    <td>@orderTrackerDb.DeliveredTime.ToString("dd MMM yyyy")</td>
                                    <td>@orderTrackerDb.DeliveryMan.Name</td>
                                    <td>
                                        <span class="badge bg-success fs-6">
                                            @orderTrackerDb.Status.Name
                                        </span>
                                    </td>
                                    @{
                                        var timeDiff = DateTime.Now - orderTrackerDb.DeliveredTime;
                                        var timeDiffMin = timeDiff.TotalMinutes;
                                    }

                                    <td class="text-center">
                                        @if (timeDiffMin < 2)
                                        {
                                            <a href="/Order/ReturnWindow/@orderTrackerDb.Order.Id" class="btn btn-sm btn-outline-danger  shadow-sm px-3">
                                                 Request Return
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-white badge bg-secondary p-2 ">
                                                Return window expired
                                            </span>
                                        }
                                    </td>





                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
