
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<style>
    .product-card {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        color: #fff;
        border-radius: 0.5rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 4px 10px rgba(37, 117, 252, 0.3);
    }

        .product-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 8px 20px rgba(37, 117, 252, 0.6);
        }

        .product-card .card-title {
            color: #f8f9fa;
            font-weight: 700;
            font-size: 1.25rem;
        }

        .product-card .card-text {
            color: #d0d6f9;
            font-weight: 500;
        }

    .btn-gradient {
        background: linear-gradient(45deg, #ff416c, #ff4b2b);
        border: none;
        color: white;
        font-weight: 600;
        padding: 0.5rem 1.25rem;
        transition: background 0.4s ease, transform 0.3s ease;
        border-radius: 0.375rem;
        box-shadow: 0 4px 8px rgba(255, 75, 43, 0.3);
    }

        .btn-gradient:hover {
            background: linear-gradient(45deg, #ff4b2b, #ff416c);
            color: #fff;
            transform: scale(1.05);
            box-shadow: 0 6px 14px rgba(255, 75, 43, 0.6);
            text-decoration: none;
            cursor: pointer;
        }
</style>

<h2 class="mb-4 text-center border-bottom border-top p-3 bg-warning">Products <small class="text-danger text-sm-center">(@ViewBag.TotalProductCount)</small> </h2>
@if (TempData["Msg"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Msg"]
    </div>
}
<div class="container">
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="card h-100 product-card">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text mb-2"><strong>Quantity:</strong> @item.Qty</p>
                        <p class="card-text mb-4"><strong>Price:</strong> Tk @item.Price.ToString("F2")</p>
                        <a href="/Order/AddtoCart/@item.Id" class="btn btn-gradient mt-auto align-self-start">
                            Add to Cart
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


