@{
    ViewBag.Title = "Processing";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4 mb-5">

    <!-- Gradient Header -->
    <div class="p-4 mb-4 text-center text-white rounded shadow"
         style="background: linear-gradient(90deg, #a18cd1, #fbc2eb);">
        <h2 class="text-black fw-bold m-0">
            Processing Orders
        </h2>
    </div>

</div>

    @if (TempData["Msg"] != null)
    {
        <div class="alert alert-info text-center fw-semibold shadow-sm">
            @TempData["Msg"]
        </div>
    }

    @if (Model.Count == 0)
    {
        <div class="d-flex justify-content-center align-items-center my-5">
            <div class="card text-center shadow-lg rounded-4 p-4 border-0" style="max-width: 500px;">
                <div class="card-body">
                    <i class="bi bi-box-seam fs-1 text-warning mb-3"></i>
                    <h3 class="fw-bold text-secondary mb-2">No Orders Available</h3>
                    <p class="text-muted mb-0">There are currently no orders to process. Please check back later.</p>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-body p-4">
                <div class="table-responsive">
                    <table class="table table-hover align-middle text-center">
                        <thead class="table-primary">
                            <tr>
                                <th>#</th>
                                <th>Order ID</th>
                                <th>Order Date</th>
                                <th>Customer</th>
                                <th>Total Products</th>
                                <th>Grand Total</th>
                                <th>Status</th>
                                <th>Details</th>
                                <th>Assigned To</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int idx = 0;
                            }

                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td>@(++idx)</td>
                                    <td class="fw-semibold text-dark">#@order.Id</td>
                                    <td>@order.Date.ToString("dd-MMM-yyyy")</td>
                                    <td>@order.Customer.Name</td>
                                    <td>
                                        <span class="badge bg-info text-dark fs-6">
                                            @order.NumberofProduct
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-success fs-6">Tk @order.GTotal</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-warning text-dark">@order.Status.Name</span>
                                    </td>
                                    <td>
                                        <a href="/Order/ViewOrderDetails/@order.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                    </td>
                                    <td>
                                        <form method="post" class="d-flex gap-2 justify-content-center">
                                            <select name="DeliveryManId" class="form-select form-select-sm w-auto" required>
                                                <option value="" selected disabled>Choose</option>
                                                @foreach (var dm in ViewBag.DeliveryMen)
                                                {
                                                    <option value="@dm.Id">@dm.Name</option>
                                                }
                                            </select>
                                            <input type="hidden" name="OrderId" value="@order.Id" />
                                            <button type="submit" class="btn btn-sm btn-success">
                                                <i class="bi bi-check-circle"></i> Assign
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }



