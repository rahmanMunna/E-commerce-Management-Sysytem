
@{
    ViewBag.Title = "Cancelled";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center mb-4 border border-primary p-4">Order Cancelled</h2>
<table class="table text-center">
    <tr>
        <th>Serial</th>
        <th>Order Id</th>
        <th>Order Date</th>
        <th>Customer Name</th>
        <th>Total Product</th>
        <th>Grand Total</th>
        <th>Status</th>
        
    </tr>
    @{ int idx = 0;}

    @foreach (var order in Model)
    {
        <tr>
            <td>@(++idx)</td>
            <td>@order.Id</td>
            <td>@order.Date</td>
            <td>@order.Customer.Name</td>
            <td>@order.NumberofProduct</td>
            <td>@order.GTotal</td>
            <td>@order.Status.Name</td>
        </tr>
    }
</table>

