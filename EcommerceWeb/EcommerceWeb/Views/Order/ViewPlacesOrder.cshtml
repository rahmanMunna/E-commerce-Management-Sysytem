
@{
    ViewBag.Title = "ViewPlacesOrder";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}




<h2 class="text-center mb-4 border bg-warning p-3">Your Places Order</h2>

<table class="table table-bordered table-striped">
    <tr class="text-center">
        <th>Order Id</th>
        <th>Date</th>
        <th>Number Of Product</th>
        <th>Grand Total</th>
        <th>Status</th>
        <th>Details</th>
    </tr>
    @foreach (var item in Model)
    {

        <tr class="text-center">
            <td>@item.Id</td>
            <td>@item.Date</td>
            <td>@item.NumberofProduct</td>
            <td>@item.GTotal</td>
            <td class="text-center @(item.StatusId == 5?"text-bg-danger" : item.StatusId == 2 ?  "text-bg-success" : "text-bg-info")">@item.Status.Name</td>
            <td class="text-center">
                <a href="/Order/ViewOrderDetails/@item.Id" class="btn btn-outline-info">See details</a>
            </td>

           

        </tr>
    }
</table>

