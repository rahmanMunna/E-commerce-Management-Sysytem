@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>E-Shop</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/Layout/_Customer.css" />
</head>
<body>
    <div class="wrapper">
        <!-- Fixed Header + Nav -->
        <div class="fixed-header">
            <!-- Header -->
            <header class="py-3">
                <div class="container d-flex justify-content-between align-items-center">
                    <a class="navbar-brand" href="/">E-Shop</a>
                    <div class="welcome-msg">
                        @if (Session["User"] != null)
                        {
                            var user = (EcommerceWeb.Ef.User)Session["User"];
                            <span class="h5">Welcome, <strong>@user.Username</strong></span>
                        }
                    </div>
                </div>
            </header>

            <!-- Navigation -->
            <nav class="navbar navbar-expand-lg bg-white shadow-sm">
                <div class="container justify-content-center flex-wrap gap-2 py-2">
                    <a href="/Order/Index" class="btn btn-outline-primary">🏠 Home</a>
                    <a href="/Order/ViewPlacedOrders" class="btn btn-outline-info">📦 Placed</a>
                    <a href="/Order/InProgress" class="btn btn-outline-warning">🔄 In Progress</a>
                    <a href="/Customer/ReceivedOrders" class="btn btn-outline-success">✅ Received</a>
                    <a href="/Order/RequestTracker" class="btn btn-outline-success">Track Return Product</a>
                    <a href="/Order/CancelledOrders" class="btn btn-outline-danger">❌ Cancelled</a>
                    <a href="/Logout/Index" class="btn btn-outline-dark">🚪 Logout</a>

                    @{
                        int count = 0;
                        if (Session["cart"] != null)
                        {
                            var cart = (List<EcommerceWeb.DTO.ProductDTO>)Session["cart"];
                            count = cart.Count;
                        }
                    }
                    <a href="/order/cart" class="btn btn-outline-primary">🛒 Cart (@count)</a>
                </div>
            </nav>
        </div>

        <!-- Main Content -->
        <main class="content container my-5">
            @RenderBody()
        </main>

        <!-- Footer -->
        <footer>
            <div class="container">
                <div class="row text-center text-md-left">
                    <div class="col-md-4 mb-3">
                        <h5>About E-Shop</h5>
                        <p>Your one-stop online shop for all your daily needs. Fast delivery and excellent customer support.</p>
                    </div>
                    <div class="col-md-4 mb-3">
                        <h5>Quick Links</h5>
                        <ul class="list-unstyled">
                            <li><a href="/Order/Index">Home</a></li>
                            <li><a href="/Order/ViewPlacedOrders">Placed Orders</a></li>
                            <li><a href="/Order/InProgress">In Progress</a></li>
                            <li><a href="/Customer/ReceivedOrders">Received Orders</a></li>
                            <li><a href="/Order/CancelledOrders">Cancelled Orders</a></li>
                        </ul>
                    </div>
                    <div class="col-md-4 mb-3">
                        <h5>Contact Us</h5>
                        <p>Email: support@eshop.com</p>
                        <p>Phone: +880 1234 567890</p>
                        <p>Address: Dhaka, Bangladesh</p>
                    </div>
                </div>
                <div class="text-center mt-3">
                    &copy; @DateTime.Now.Year E-Shop. All Rights Reserved.
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
