@{
    ViewBag.Title = "AllProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4 mb-5">

    <h2 class="text-center text-white fw-bold p-3 rounded shadow"
        style="background: linear-gradient(90deg, #f6d365, #fda085); font-size: 2rem;">
        <i class="bi bi-box-seam me-2"></i> Manage Products
    </h2>


    @if (TempData["Msg"] != null)
    {
        <div class="alert @TempData["Class"] alert-dismissible fade show mt-3" role="alert">
            @TempData["Msg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @foreach (var productGroupByCategory in Model)
    {
        <div class="card my-4 shadow-lg rounded-4 border-0">
            <div class="card-header text-white text-center fw-bold fs-5"
                 style="background: linear-gradient(90deg, #0066cc, #3399ff);">
                @productGroupByCategory.CategoryName
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0 text-center align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>#</th>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Available Qty</th>
                                <th>Price</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int idx = 0;
                            }
                            @foreach (var product in productGroupByCategory.Products)
                            {
                                <tr>
                                    <td>@(++idx)</td>
                                    <td class="fw-semibold">#@product.Id</td>
                                    <td>@product.Name</td>
                                    <td>
                                        <span class="badge bg-info text-dark fs-6">@product.Qty</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-success fs-6">Tk @product.Price</span>
                                    </td>
                                    <td>
                                        <a class="btn btn-sm btn-outline-primary" href="/Product/Update/@product.Id">
                                            <i class="bi bi-pencil-square"></i> Update
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
